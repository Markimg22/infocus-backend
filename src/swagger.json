{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Infocus Backend",
    "description": "Infocus application documentation."
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "DEV"
    },
    {
      "url": "https://infocus-app.herokuapp.com",
      "description": "PROD"
    }
  ],
  "paths": {
    "/register": {
      "post": {
        "description": "Create new user and return JWT token.",
        "tags": ["User"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              },
              "examples": {
                "register": {
                  "value": {
                    "name": "Marcos Campos",
                    "email": "teste@hotmail.com",
                    "password": "12345"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Invalid input."
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schemas": {
                  "type": "object",
                  "items": {
                    "token": "string"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/login": {
      "post": {
        "description": "Authenticate user and return JWT token.",
        "tags": ["User"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              },
              "examples": {
                "register": {
                  "value": {
                    "email": "teste@hotmail.com",
                    "password": "12345"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "E-mail or password is incorrect."
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schemas": {
                  "type": "object",
                  "items": {
                    "token": "string"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/refresh-token": {
      "post": {
        "description": "Create new token.",
        "tags": ["User"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RefreshToken"
              },
              "examples": {
                "register": {
                  "value": {
                    "refresh_token": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Invalid input."
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schemas": {
                  "type": "object",
                  "items": {
                    "token": "string"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/delete-user": {
      "delete": {
        "description": "Delete user",
        "tags": ["User"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "401": {
            "description": "Unauthorized"
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schemas": {
                  "type": "object",
                  "items": {
                    "message": "string"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/create-task": {
      "post": {
        "description": "Create task and return list of tasks.",
        "tags": ["Task"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Task"
              },
              "examples": {
                "register": {
                  "value": {
                    "title": "Estudar",
                    "is_completed": false
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Unauthorized"
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schemas": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Task"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/list-tasks": {
      "get": {
        "description": "List tasks.",
        "tags": ["Task"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "400": {
            "description": "Unauthorized"
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schemas": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Task"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/update-task": {
      "put": {
        "description": "Update task and return list of tasks.",
        "tags": ["Task"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Task"
              },
              "examples": {
                "register": {
                  "value": {
                    "task_id": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Unauthorized"
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schemas": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Task"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/delete-task": {
      "delete": {
        "description": "Create task and return list of tasks.",
        "tags": ["Task"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Task"
              },
              "examples": {
                "register": {
                  "value": {
                    "task_id": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Unauthorized"
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schemas": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Task"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/update-performance": {
      "put": {
        "description": "Update performance and return performance.",
        "tags": ["Performance"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Performance"
              },
              "examples": {
                "register": {
                  "value": {
                    "value": 25,
                    "data_to_update": "total_time_work"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Unauthorized"
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schemas": {
                  "type": "object",
                  "items": {
                    "$ref": "#/components/schemas/Performance"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/list-performance": {
      "get": {
        "description": "List performance.",
        "tags": ["Performance"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "400": {
            "description": "Unauthorized"
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schemas": {
                  "type": "object",
                  "items": {
                    "$ref": "#/components/schemas/Performance"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "Task": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "is_completed": {
            "type": "boolean"
          }
        }
      },
      "Performance": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "total_time_work": {
            "type": "number"
          },
          "total_time_rest": {
            "type": "number"
          },
          "total_tasks_completed": {
            "type": "number"
          }
        }
      },
      "RefreshToken": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "expires_in": {
            "type": "number"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}