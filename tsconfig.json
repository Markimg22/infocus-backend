{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["ES7"],
    "allowJs": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "./src",
    "removeComments": true,
    "strict": false,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
  },
  "include": [
    "src/**/*", "ormconfig.ts",
  ],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
  ]
}